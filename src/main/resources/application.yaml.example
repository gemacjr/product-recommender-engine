spring:
  application:
    name: product-recommender-engine

  # Database Configuration
  datasource:
    url: jdbc:postgresql://localhost:5432/product_recommender
    username: postgres
    password: postgres
    driver-class-name: org.postgresql.Driver

  jpa:
    hibernate:
      ddl-auto: update
    show-sql: true
    properties:
      hibernate:
        dialect: org.hibernate.dialect.PostgreSQLDialect
        format_sql: true
    open-in-view: false

  # Spring AI Configuration
  ai:
    openai:
      api-key: ${OPENAI_API_KEY}  # Set this as environment variable
      chat:
        options:
          model: gpt-4o  # or gpt-4, gpt-3.5-turbo
          temperature: 0.7
      embedding:
        options:
          model: text-embedding-3-small  # or text-embedding-3-large

    vectorstore:
      pgvector:
        index-type: HNSW  # HNSW (Hierarchical Navigable Small World) for fast approximate search
        distance-type: COSINE_DISTANCE  # COSINE_DISTANCE, EUCLIDEAN_DISTANCE, or INNER_PRODUCT
        dimensions: 1536  # Must match the embedding model dimensions
        remove-existing-vector-store-table: false
        initialize-schema: true

# Server Configuration
server:
  port: 8080
  error:
    include-message: always
    include-binding-errors: always

# Application Configuration
application:
  product:
    default-limit: 10
    max-limit: 100
  recommendation:
    similarity-threshold: 0.7  # Minimum similarity score (0-1)
    max-results: 20
  rag:
    context-window-size: 5  # Number of context documents to retrieve
    temperature: 0.3  # LLM temperature for RAG responses

# Logging Configuration
logging:
  level:
    root: INFO
    com.swiftbeard.product_recommender_engine: DEBUG
    org.springframework.ai: DEBUG
    org.hibernate.SQL: DEBUG
  pattern:
    console: "%d{yyyy-MM-dd HH:mm:ss} - %msg%n"
